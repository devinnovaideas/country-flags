{
    "name": "justoverclock/country-flags",
    "description": "Add country flags attribute to Flarum Users",
    "keywords": [
        "country flag",
        "flag",
        "country"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.0.0"
    },
    "require-dev": {
        "flarum/testing": "^1.0.0"
    },
    "authors": [
        {
            "name": "Marco Colia",
            "email": "info@flarum.it",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Justoverclock\\CountryFlags\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Country Flags",
            "category": "features",
            "icon": {
                "name": "far fa-flag",
                "backgroundColor": "red",
                "color": "white"
            }
        }
    }
}
